<div class="container">
  <div class="row">
    <div class="d-flex col-md-12">
      <h2>
        <%= @the_board.name %>
      </h2>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-outline-success ms-auto" data-bs-toggle="modal" data-bs-target="#postModal">
        Add a new post
      </button>
      <!-- Modal -->
      <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="addPostModal">New post</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <div class="modal-body">
                <form action="/insert_board" method="post">
                  <div class="pb-2">
                    <label for="title_box">Title</label>
                    <input class="w-100" type="text" id="title_box" name="query_title">
                  </div>

                  <div class="pb-1">
                    <label for="body_box">Body</label>
                    <textarea class="w-100" id="body_box" name="query_body" rows="3"></textarea>
                  </div>
                  
                  <div class="pb-3">
                    <label for="expires_on_box">Expires on</label>
                    <input class="w-100 p-2" type="date" id="expires_on_box" name="query_expires_on">
                  </div>

                <input type="hidden" id="board_id_box" name="query_board_id" value="<%= @the_board.id %>">

                <button type="button" class="btn btn-primary w-100">Add post</button>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<h2>Active posts</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>

  <% @active_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>

<h2>Expired posts</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expired on</th>
  </tr>

  <% @expired_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>
